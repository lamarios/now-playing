        </dependency>
        <dependency>
            <groupId>com.ftpix.nowplaying</groupId>
            <artifactId>harmony-activities</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- -->
        <dependency>
            <groupId>com.google.code.gson</groupId>
